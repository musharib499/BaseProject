<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lLayoutErrorView"
    style="@style/LayoutHeightWidthMatchStyling"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imViewError"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20dp"
        app:srcCompat="@drawable/ic_rabbit" />

    <TextView
        android:id="@+id/tvError"
        style="@style/TextStyleNormal.Large.Orange"
        android:layout_below="@+id/imViewError"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_25dp"
        android:gravity="center"
        android:text="@string/be_patient" />


    <TextView
        android:id="@+id/tvErrorContact"
        style="@style/TextStyleNormal.Gray"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:gravity="center"
        android:text="@string/world_report" />

</RelativeLayout>