<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
       
      <!--  <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24px</item>-->
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/primaryTextColor</item>
    </style>
    <style name="AppTab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="AppTab" parent="Widget.Design.TabLayout">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="tabTextAppearance">@style/AppTab.TextAppearance</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@color/primaryTextColor</item>
        <item name="tabSelectedTextColor">@color/primaryTextColor</item>
        <item name="tabTextColor">@color/primaryTextColor</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
       <!-- <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/secondaryTextColor</item>
        <item name="colorControlHighlight">@color/secondaryTextColor</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/primaryTextColor</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/primaryLightColor</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/primaryDarkColor</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/primaryLightColor</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/primaryDarkColor</item>



    </style>

    <style name="Toolbar.TitleText" parent="TextStyleNormal">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="LayoutHeightWrapWidthMatchStyling">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LayoutHeightWidthMatchStyling">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="LayoutHeightWrapWidthMatchStyling.Padding">
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="LayoutHeightWrapWidthMatchStyling.Padding.Top">
        <item name="android:paddingTop">@dimen/padding_medium</item>
    </style>

    <style name="TextStyleNormal">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:drawablePadding">@dimen/padding_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextStyleNormal.Red">
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="TextStyleNormal.placeholderColor">
        <item name="android:padding">@dimen/padding_large</item>
    </style>
    <style name="TextStyleNormal.placeholderColor.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="TextStyleNormal.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="TextStyleNormal.White">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyleNormal.Radio">
        <item name="buttonTint">@color/border</item>
    </style>

    <style name="TextStyleNormal.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextStyleNormal.Large.Red">
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="TextStyleNormal.Large.Orange">
        <item name="android:textColor">@color/light_oragne</item>
    </style>

    <style name="LayoutHeightWrapWidthMatchStyling.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="TextStyleNormal.Bottom_Button">
        <item name="android:textSize">@dimen/text_size_large</item>
       <!-- <item name="android:background">@drawable/button_selecter</item>-->

        <item name="android:padding">@dimen/padding_medium</item>

    </style>

    <style name="TextStyleNormal.Bottom_Button.White">

        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyleNormal.Bottom_Button.themeColor">

        <item name="android:background">@color/primaryLightColor</item>
    </style>

    <style name="TextStyleNormal.Large30">
        <item name="android:textSize">@dimen/text_size_large30</item>
    </style>
    <style name="TextStyleNormal.Large30.borderColor">
        <item name="android:textColor">@color/border</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>
    <style name="TextStyleNormal.Large35">
        <item name="android:textSize">@dimen/text_size_large35</item>
    </style>
    <style name="TextStyleNormal.Large30.margin">
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleNormal.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextStyleNormal.Small.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="TextStyleNormal.Small.Red">
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="TextStyleNormal.Small.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="TextStyleNormal.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button">

    </style>



</resources>
